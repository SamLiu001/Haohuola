</div>

<div class="hot-item today-update">
	<div id="hot-tab">
		今日更新（条）
	</div>
	<div class="siteList">
		<% updateItems.forEach(function(item){
			%>
			<li>
				<a>
					<span class="siteName"><%=item._id%></span>
					<span class="siteNum"><%=item.num%></span>
				</a>
			</li>
			<%
		})
		%>
	</div>
</div>

